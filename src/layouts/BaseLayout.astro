---
import '../styles/global.css';
import CodeCopyButton from '../components/CodeCopyButton.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Cooties@Blog | Cybersecurity & AI Research',
  description = 'A platform where I delve into Cybersecurity/ML insights, retrospectives and articles spanning my industry & academic experience.',
  image = '/og-image.png'  // Use PNG for better LinkedIn/social media support
} = Astro.props;

const siteUrl = Astro.site || 'https://chaoticcooties.github.io';
const imageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Open Graph / Facebook / LinkedIn -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={siteUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={imageUrl}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content={title}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={siteUrl}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={imageUrl}>
</head>
<body>
  <header class="header">
    <nav class="nav">
      <a href="/" class="logo">
        <svg class="logo-icon" width="50" height="50" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
          <g transform="translate(8, 12) scale(1)">
            <g stroke="#5B3320" stroke-width="5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="62" y="112" width="22" height="60" rx="6" fill="#B6AAA0"/>
              <rect x="172" y="112" width="22" height="60" rx="6" fill="#B6AAA0"/>
              <rect x="62" y="90" width="132" height="110" rx="24" fill="#FCEFD9"/>
              <rect x="82" y="110" width="92" height="72" rx="18" fill="#F9E6CF"/>
              <rect x="96" y="190" width="64" height="20" rx="6" fill="#FCEFD9"/>
            </g>
            <g fill="#5B3320">
              <circle cx="112" cy="138" r="4"/>
              <circle cx="144" cy="138" r="4"/>
            </g>
            <path
              d="M112 150 C118 158, 138 158, 144 150"
              fill="none"
              stroke="#5B3320"
              stroke-width="4"
              stroke-linecap="round"
            />
          </g>
        </svg>
        <span class="logo-text">Cooties</span>
      </a>
      <div class="nav-links">
        <a href="/">Research</a>
        <a href="/about">About</a>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <p>&copy; {new Date().getFullYear()} Chegne Eu Joe.</p>
  </footer>

  <CodeCopyButton />

  <script>
    // Scroll animation for logo
    const header = document.querySelector('.header');
    let lastScroll = 0;

    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;

      if (currentScroll > 100) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }

      lastScroll = currentScroll;
    });
  </script>
</body>
</html>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    background: rgba(250, 248, 245, 0.8);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(232, 229, 223, 0.3) 20%,
      rgba(232, 229, 223, 0.3) 80%,
      transparent 100%);
    opacity: 0.6;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.875rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-display);
    font-size: 1.35rem;
    font-weight: 600;
    color: var(--color-text);
    letter-spacing: -0.02em;
    transition: color 0.2s ease;
  }

  .logo:hover {
    color: var(--color-primary);
  }

  .logo-icon {
    flex-shrink: 0;
    display: block;
    margin-top: -7px;
  }

  .logo-text {
    transition: opacity 0.3s ease, transform 0.3s ease;
    white-space: nowrap;
  }

  .header.scrolled .logo-text {
    opacity: 0;
    transform: translateX(-20px);
    pointer-events: none;
  }

  .nav-links {
    display: flex;
    gap: 2.5rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--color-text-muted);
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 0;
    height: 1.5px;
    background: var(--color-primary);
    transition: width 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  main {
    min-height: calc(100vh - 200px);
  }

  .footer {
    border-top: 1px solid var(--color-border);
    padding: 3rem 2rem;
    text-align: center;
    color: var(--color-text-muted);
    margin-top: 6rem;
  }

  @media (max-width: 768px) {
    .nav {
      padding: 1rem 1.5rem;
    }

    .logo {
      font-size: 1.2rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .nav-links a {
      font-size: 0.9rem;
    }
  }
</style>
