---
interface Comparison {
  aspect: string;
  before: string;
  after: string;
}

interface Props {
  title?: string;
  beforeLabel?: string;
  afterLabel?: string;
  data: Comparison[];
}

const {
  title = "Comparison",
  beforeLabel = "Before",
  afterLabel = "After",
  data
} = Astro.props;
---

<div class="comparison-table">
  {title && <h3 class="table-title">{title}</h3>}

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th class="aspect-col">Aspect</th>
          <th class="before-col">{beforeLabel}</th>
          <th class="after-col">{afterLabel}</th>
        </tr>
      </thead>
      <tbody>
        {data.map((row) => (
          <tr>
            <td class="aspect-cell">{row.aspect}</td>
            <td class="before-cell">{row.before}</td>
            <td class="after-cell">{row.after}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>

<style>
  .comparison-table {
    margin: 2.5rem 0;
    background: white;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .table-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 1.5rem 0;
    text-align: center;
  }

  .table-container {
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: #F9FAFB;
  }

  th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-text);
    border-bottom: 2px solid #E5E7EB;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .aspect-col {
    width: 25%;
  }

  .before-col,
  .after-col {
    width: 37.5%;
  }

  td {
    padding: 1rem;
    border-bottom: 1px solid #F3F4F6;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  tr:last-child td {
    border-bottom: none;
  }

  tbody tr:hover {
    background: #F9FAFB;
  }

  .aspect-cell {
    font-weight: 600;
    color: var(--color-text);
  }

  .before-cell {
    color: #DC2626;
    background: #FEF2F2;
  }

  .after-cell {
    color: #059669;
    background: #ECFDF5;
  }

  @media (max-width: 768px) {
    .comparison-table {
      padding: 1.25rem;
    }

    th, td {
      padding: 0.75rem 0.5rem;
      font-size: 0.85rem;
    }

    .table-title {
      font-size: 1.25rem;
    }
  }
</style>
