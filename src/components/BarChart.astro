---
interface Bar {
  label: string;
  value: number;
  color?: string;
}

interface Props {
  title: string;
  subtitle?: string;
  data: Bar[];
  maxValue?: number;
}

const { title, subtitle, data, maxValue } = Astro.props;
const max = maxValue || Math.max(...data.map(d => d.value));
---

<div class="bar-chart">
  <div class="chart-header">
    <h3 class="chart-title">{title}</h3>
    {subtitle && <p class="chart-subtitle">{subtitle}</p>}
  </div>

  <div class="chart-body">
    {data.map((bar) => {
      const percentage = (bar.value / max) * 100;
      const barColor = bar.color || 'var(--color-primary)';

      return (
        <div class="bar-row">
          <div class="bar-label">{bar.label}</div>
          <div class="bar-container">
            <div
              class="bar-fill"
              style={`width: ${percentage}%; background-color: ${barColor};`}
            >
              <span class="bar-value">{bar.value.toFixed(2)}</span>
            </div>
          </div>
        </div>
      );
    })}
  </div>
</div>

<style>
  .bar-chart {
    background: #FFFFFF;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 2rem;
    margin: 2.5rem 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .chart-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .chart-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .chart-subtitle {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .chart-body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .bar-row {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    align-items: center;
  }

  .bar-label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text);
    text-align: right;
  }

  .bar-container {
    background: #F5F5F5;
    border-radius: 6px;
    height: 32px;
    position: relative;
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 0.75rem;
    transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    min-width: 60px;
  }

  .bar-value {
    font-size: 0.85rem;
    font-weight: 600;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .bar-chart {
      padding: 1.5rem;
    }

    .bar-row {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .bar-label {
      text-align: left;
      font-size: 0.85rem;
    }

    .chart-title {
      font-size: 1.25rem;
    }
  }
</style>
