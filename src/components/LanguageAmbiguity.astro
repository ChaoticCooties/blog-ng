            stroke="#C2BFB6" stroke-width="2" marker-end="url(#arrow-soft)"/>

    <!-- Meaning pills -->
    <rect x="370" y="135" width="180" height="26" rx="13"
            fill="#FFF9F0" stroke="#F05D23" stroke-width="1.5"/>
    <text x="460" y="152" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#F05D23">
        Literal: open a document
    </text>

    <rect x="560" y="135" width="200" height="26" rx="13"
            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="1.5"/>
    <text x="660" y="152" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#6B6B6B">
        Reveal internal/system state
    </text>

    <rect x="370" y="165" width="200" height="26" rx="13"
            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="1.5"/>
    <text x="470" y="182" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#6B6B6B">
        Summarize/explain a file
    </text>

    <!-- ================= Row 2: "Run the program" ================= -->

    <!-- Phrase box -->
    <rect x="80" y="215" width="210" height="42" rx="10"
            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="2"/>
    <text x="185" y="242" text-anchor="middle"
            font-family="'DM Sans', sans-serif"
            font-size="14" fill="#1A1A1A">
        “Run the program”
    </text>

    <!-- Arrows -->
    <line x1="290" y1="236" x2="350" y2="220"
            stroke="#C2BFB6" stroke-width="2" marker-end="url(#arrow-soft)"/>
    <line x1="290" y1="236" x2="350" y2="236"
            stroke="#C2BFB6" stroke-width="2" marker-end="url(#arrow-soft)"/>
