            stroke="#C2BFB6" stroke-width="2" marker-end="url(#arrow-soft)"/>
    <line x1="290" y1="311" x2="350" y2="327"
            stroke="#C2BFB6" stroke-width="2" marker-end="url(#arrow-soft)"/>

    <!-- Meaning pills -->
    <rect x="370" y="285" width="180" height="26" rx="13"
            fill="#FFF9F0" stroke="#F05D23" stroke-width="1.5"/>
    <text x="460" y="302" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#F05D23">
        Literal: locate a lost object
    </text>

    <rect x="560" y="285" width="200" height="26" rx="13"
            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="1.5"/>
    <text x="660" y="302" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#6B6B6B">
        Find a cryptographic key (attack!)
    </text>

    <rect x="370" y="315" width="210" height="26" rx="13"
            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="1.5"/>
    <text x="475" y="332" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#6B6B6B">
        Interpret metaphorically (“key idea”)
    </text>
