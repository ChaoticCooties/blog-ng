            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="1.5"/>
    <text x="470" y="257" text-anchor="middle"
            font-family="'DM Sans', sans-serif" font-size="11" fill="#6B6B6B">
        Part of a fictional narrative
    </text>

    <!-- ================= Row 3: "Find the key" ================= -->

    <!-- Phrase box -->
    <rect x="80" y="290" width="210" height="42" rx="10"
            fill="#FAF8F5" stroke="#E8E5DF" stroke-width="2"/>
    <text x="185" y="317" text-anchor="middle"
            font-family="'DM Sans', sans-serif"
            font-size="14" fill="#1A1A1A">
        “Find the key”
    </text>

    <!-- Arrows -->
    <line x1="290" y1="311" x2="350" y2="295"
            stroke="#C2BFB6" stroke-width="2" marker-end="url(#arrow-soft)"/>
